{
  "name": "todo-list",
  "version": "0.1.1",
  "private": true,
  "dependencies": {
    "@craco/craco": "^7.0.0",
    "@hookform/resolvers": "^2.9.10",
    "@mdi/js": "^7.0.96",
    "@mdi/react": "^1.6.1",
    "@mui/material": "^5.10.12",
    "@mui/x-date-pickers": "^5.0.16",
    "@optsol/react": "^2.0.14",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "axios": "^1.2.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.0",
    "react-number-format": "^5.1.3",
    "react-router-dom": "^6.4.2",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.6",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0",
    "yup": "^0.32.11"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "craco eject",
    "lint": "eslint --ext .tsx,.ts . --fix",
    "start:mock-api": "node data/server.js",
    "types:check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint-staged": "lint-staged --config .lintstagedrc.json",
    "format:check": "prettier . --ignore-path .gitignore --check",
    "format:fix": "prettier . --ignore-path .gitignore --write",
    "validate": "npm-run-all --parallel types:check && lint-staged"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-restricted-imports": [
        "error",
        {
          "patterns": [
            "@/features/*/*"
          ]
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "json-server": "^0.17.1"
  }
}
